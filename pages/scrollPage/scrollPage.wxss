/* pages/scrollPage/scrollPage.wxss */

page {
  overflow-y: visible;
}

.content {
  height: 500rpx;
  overflow: visible;
}

.nav {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: green;
  color: #fff;
  text-align: center;
  position: -webkit-sticky;
  position: sticky;
  top: 10px;
}

.item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: grey;
  color: #fff;
  margin: 20rpx auto;
}
