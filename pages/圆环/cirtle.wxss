@keyframes front-half {
  0% {
    transform: rotate(0);
  }

  99% {
    transform: rotate(180deg);
    opacity: 1;
  }

  100% {
    transform: rotate(180deg);
    opacity: 0;
  }
}

@keyframes back-half {
  0% {
    transform: rotate(0);
  }

  99% {
    transform: rotate(180deg);
    opacity: 1;
  }

  100% {
    transform: rotate(180deg);
    opacity: 0;
  }
}
