/* pages/滑动展示图表/slideCharts.wxss*/

page {
  height: 2000rpx;
  overflow-y: scroll;
}

.slide-content {
  height: 450rpx;
  width: 100%;
  background: #eee;
  overflow-x: scroll;
  overflow-y: hidden;
  position: relative;
}

.slide-charts {
  height: 450rpx;
  /* background: rgba(0, 200, 0, 0.2); */
  transition: all 1s;
  overflow-x: scroll;
  overflow-y: hidden;
}

.slide-item {
  display: inline-block;
  height: 100%;
  text-align: center;
  width: 100rpx;
  position: relative;
}

.slide-item::after {
  content: "";
  position: absolute;
  top: 15%;
  height: 90%;
  width: 2rpx;
  left: 50%;
  margin-left: -1rpx;
  background: #aaa;
  z-index: 0;
}

.slide-item-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 100rpx;
}

.slide-bar {
  width: 100rpx;
  height: 400rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.slide-bar-content {
  background: linear-gradient(#1696ea, #eee);
  /* background: linear-gradient(#1696ea, #60bdf1); */
  width: 60rpx;
  position: absolute;
  bottom: 0;
  z-index: 5;
  border-radius: 30rpx 30rpx 0 0;
}

.slide-bar-isSelect {
  background: #1696ea;
}

.chart-bottom {
  width: 100%;
  height: 300rpx;
  background: #fff;
  position: relative;
}

.chart-bottom:after {
  content: "";
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 35rpx solid #fff;
  position: absolute;
  top: -20rpx;
  left: 50%;
  margin-left: -20rpx;
  z-index: 30;
}
